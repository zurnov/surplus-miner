# Example .env for braiins-grpc (copy to .env and customize)
MINER_HOSTS=192.168.0.243,192.168.0.249
MINER_PORT=4028
PORT=3099
FRONTEND_PORT=3030

# MQTT broker (power-control.js currently uses hard-coded broker if not provided)
MQTT_HOST=192.168.0.50
MQTT_PORT=1883

# PAPI (miner API) framing
PAPI_APPEND_NEWLINE=true
PAPI_SEND_NULL=false

# Auto control timers (minutes). 0 disables.
AUTO_SHUTDOWN_MINUTES=5
AUTO_RESUME_MINUTES=3

# Logging
LOG_TO_CONSOLE=true
LOG_DIR=./logs
REQUEST_LOG=false

# Control settings
DISCRETE_MODE=true
ALLOWED_LEVELS=0,800,1000,1420

NODE_ENV=production

# Notes:
# - For SSH access to miners, bind-mount your host SSH keys (e.g. ${HOME}/.ssh -> /root/.ssh)
# - Never commit real .env with secrets to git